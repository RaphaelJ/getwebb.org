#home_screen {
    background-image: url('@{StaticR img_homepage_homescreen_png}');

    #upload_box {
        width: 600px;
        margin: auto;
        background-color: rgba(255, 255, 255, 0.15);
        border: 0;
        border-radius: 0 0 5px 5px;

        #upload_box_content {
            position: relative;
            padding: 5px 15px 15px 15px;

            #upload_error {
                margin: 10px 130px 5px 0;
                padding: 5px 10px;
                background-color: rgba(183, 64, 57, 0.7);
                box-shadow: 0 0 2px black;
                border-radius: 2px;
            }

            h2 {
                font-size: 20px;
            }

            #public_private {
                position: absolute;
                top: 15px;
                right: 15px;

                .public_button, .private_button {
                    border-color: rgba(0, 0, 0, 0.4);
                    box-shadow: inset 0 1px 0 0 rgba(255, 255, 255, 0.15);

                    color: white;
                }

                .public_button:active, .public_button.enabled,
                .private_button:active, .private_button.enabled {
                    box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.3),
                                0 1px 0 0 rgba(255, 255, 255, 0.2);
                }
            }

            .options_button {
                float: left;
                margin: 15px 0 0 0;

                button {
                    padding: 7px 10px 7px 35px;

                    background-image: url(
                        '@{StaticR img_homepage_more_options_png}'
                    );
                    background-color: rgba(0, 0, 0, 0.1);
                    background-repeat: no-repeat;
                    background-position: 10px center;

                    border-radius: 4px;
                    border: 1px solid rgba(0, 0, 0, 0.3);
                    box-shadow: inset 0 1px 0 0 rgba(255, 255, 255, 0.15);

                    font-size: 15px;
                    color: white;
                    text-decoration: none;

                    transition-property: all;
                    transition-duration: 0.1s;
                }

                button:hover {
                    background-color: rgba(0, 0, 0, 0.4);
                }

                button:active, button.enabled:active {
                    padding: 9px 10px 5px 35px;

                    border: 1px solid rgba(0, 0, 0, 0.5);
                    box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.5),
                                0 1px 0 0 rgba(255, 255, 255, 0.2);
                }

                button.enabled {
                    padding: 8px 10px 6px 35px;

                    border: 1px solid rgba(0, 0, 0, 0.4);
                    box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.4),
                                0 1px 0 0 rgba(255, 255, 255, 0.2);
                }
            }

            #upload_button {
                float: right;
                display: block;

                font-size: 20px;
                font-weight: 700;
                text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
            }

            #options {
                margin: 10px 35px 10px 35px;

                [name=public], [name=public] + label {
                    display: none;
                }

                label {
                    font-weight: 600;
                }

                input[type=text], input[type=password], input[type=email] {
                    width: 300px;
                    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.2);
                }

                input[type=text]:focus, input[type=password]:focus,
                input[type=email]:focus {
                    border: 1px solid rgba(82, 168, 236, 0.9);
                    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.2),
                                0 0 6px rgba(82, 168, 236, 0.6);
                }
            }

            #upload_progress {
                margin-top: 15px;

                h2 {
                    float: left;
                    margin-top: 0;
                }

                #upload_speed {
                    float: right;
                    line-height: 20px;
                }

                .upload {
                    margin: 10px 0 0 0;
                    width: 100%;

                    .preview {
                        float: left;
                        width: 80px;

                        text-align: center;

                        .img {
                            float: left;
                            position: relative;

                            .border {
                                border: 1px solid rgba(255, 255, 255, 0.2);
                                position: absolute;
                                top: 1px;
                                bottom: 1px;
                                left: 1px;
                                right: 1px;
                            }

                            img {
                                display: block;
                                margin: 0;
                                padding: 0;
                                max-width: 80px;
                                max-height: 60px;

                                border: 1px solid black;

                                box-shadow: 0 0 2px black;
                            }
                        }
                    }

                    .status {
                        margin-left: 95px;
                        padding: 2px 0;

                        h3 {
                            margin: 0 0 0 0;
                            padding: 0 0 0 25px;
                            overflow: hidden;

                            background-repeat: no-repeat;
                            background-position: left center;

                            font-size: 15px;

                            a {
                                padding-right: 20px;
                                background-image: url("@{StaticR img_link_new_window_png}");
                                background-repeat: no-repeat;
                                background-position: right center;
                            }
                        }

                        h3.waiting {
                            background-image: url(
                                '@{StaticR img_homepage_waiting_png}'
                            );
                        }

                        h3.uploading {
                            background-image: url(
                                '@{StaticR img_homepage_uploading_png}'
                            );
                        }

                        h3.uploaded {
                            background-image: url(
                                '@{StaticR img_homepage_uploaded_png}'
                            );
                        }

                        h3.error {
                            background-image: url(
                                '@{StaticR img_homepage_error_png}'
                            );
                        }

                        .progress {
                            margin: 7px 0 0 0;
                            width: 100%;
                        }
                    }
                }
            }
        }
    }

    .progress {
        height: 5px;
        background-color: #F2F2E2;

        box-shadow: 0 0 2px black;

        .complete {
            background-color: #65A625;
            height: 100%;
        }
    }

    #upload_global_progress {
        display: none;
        position: absolute;
        top: 37px;
        width: 100%;
        height: 5px;
    }

    #upload_global_progress .complete {
        height: 100%;
        background-color: #65A625;
    }
}

#page {
    margin: 0 auto;

    ul#browser {
        width: 100%;
        height: 100px;
        padding: 0;
        margin: 0;
        position: relative;
        background-color: #151927;

        list-style-type: none;

        li {
            float: left;
            padding: 0;
            margin: 0;
            line-height: 0;

            img {
                opacity: 0.6;
                width: 50px;
                height: 50px;
            }
            img:hover {
                opacity: 1;
            }
        }

        .big_button {
            position: absolute;
            bottom: 20px;
            left: 20px;
        }
    }

    ul#features {
        clear: both;
        margin: auto;
        padding: 0;
        width: 100%;

        list-style-type: none;

        li {
            width: 33%;
            float: left;
            margin: 40px 0;
            padding: 0;

            text-align: center;

            h3 {
                margin: 3px 0 10px 0;

                font-size: 18px;
                font-weight: bold;
            }

            .description {
                display: block;
                padding: 0 50px;
            }
        }
    }
}

@media (max-width: 1000px) {
    #home_screen {
        #upload_box {
            width: 100%;

            #upload_box_content {
                #upload_form {
                    h2 {
                        text-align: center;
                    }

                    #upload_widget {
                        margin: 20px 0;

                        text-align: center;

                        input {
                            display: inline;
                        }
                    }
                }

                #options {
                    input[type=text], input[type=password], input[type=email] {
                        width: 100%;
                    }
                }
            }
        }
    }

    #page #browser {
        display: none;
    }
}

@media (max-width: 600px) {
    #home_screen #upload_box #upload_box_content #public_private {
        position: static;
        margin: 15px 0;

        text-align: center;
        font-size: 0;

        #public_button, #private_button {
            float: none;
        }
    }

    #page {
        ul#features {
            li {
                img {
                    display: none;
                }

                width: 100%;
                margin: 15px 0;
            }
        }
    }
}
