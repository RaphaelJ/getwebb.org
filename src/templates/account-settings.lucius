.avatar_settings {
    img {
        float: left;
        margin: 0 10px 15px 0;
        border-radius: 2px;
    }

    #avatar_file_widget {
        margin-left: 115px;
    }
}

.settings {
    clear: both;
}

textarea {
    width: 400px;
    height: 75px;
}

@media (max-width: 550px) {
    .avatar_settings #avatar_file_widget {
        clear: both;
        margin-left: 0;
    }
}
